@model ProductListViewModel

<div class="row">
    <div class="col-3">
        @await Component.InvokeAsync("CategoriesMenu")
        @await Component.InvokeAsync("ProductFilterMenu")
        <div products="" number="3"></div>
    </div>
    <div class="col-9">
        <div class="row my-3">
            @foreach (Product p in Model.Products)
            {
                <partial name="_ProductCard" model="@p" />
            }
        </div>
        <div>
            <div page-model="@Model?.Pagination"
                 page-action="Index"
                 page-classes-enabled="true"
                 page-class="btn"
                 page-class-normal="btn-outline-primary"
                 page-class-selected="btn-primary"
                 class="btn-group">
            </div>
        </div>
    </div>
</div>

@section Header {
    <div>
        @* Only for Index header *@
    </div>
}