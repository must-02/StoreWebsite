@model ProductDtoForInsertion

<div class="text-center">
    <div class="display-6">Create</div>
</div>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All"></div>
    
    <div class="form-group my-3">
        <label asp-for="CategoryId">Category:</label>
        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories">
            
            
            @* @foreach (Category category in ViewBag.Categories)
            {
                <option value="@category.CategoryId">@category.CategoryName</option>
            } *@
        </select>
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName">Product Name:</label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    
    <div class="form-group my-3">
        <label asp-for="ProductSummary">Product Summary:</label>
        <input asp-for="ProductSummary" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductPrice">Product Price:</label>
        <input asp-for="ProductPrice" class="form-control" />
    </div>
    
    <div class="form-group my-3">
        <label asp-for="ProductImageUrl">Product Image:</label>
        <input name="formFile" type="file" class="form-control" />
    </div>

    <div class="form-group my-3">
        <div class="btn btn-group">
            <button class="btn btn-primary" asp-action="Index">
                <i class="fa fa-arrow-left"></i>
                Back to products
            </button>

            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Save
            </button>
        </div>
    </div>
</form>