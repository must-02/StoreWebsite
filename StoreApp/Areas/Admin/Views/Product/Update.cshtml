@model ProductDtoForUpdate

<div class="text-center">
    <div class="display-6">Update</div>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="hidden" asp-for="ProductId" />

    <div class="form-group my-3">
        <label asp-for="CategoryId">Category:</label>
        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories">


            @* @foreach (Category category in ViewBag.Categories)
            {
            <option value="@category.CategoryId">@category.CategoryName</option>
            } *@
        </select>
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName">Product Name:</label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    
    <div class="form-group my-3">
        <label asp-for="ProductSummary">Product Summary:</label>
        <input asp-for="ProductSummary" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductPrice">Product Price:</label>
        <input asp-for="ProductPrice" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Showcase">Showcase:</label>
        <input asp-for="Showcase" class="form-check-input" type="checkbox"/>
    </div>

    <div class="form-group my-3">
        <img class="rounded shadow" width="150" src="@Model?.ProductImageUrl" />
    </div>
    
    <div class="form-group my-3">
        <label asp-for="ProductImageUrl">Product Image:</label>
        <input type="file" name="formFile" class="form-control" />
    </div>

    <div class="form-group my-3">
        <div class="btn btn-group">
            <button class="btn btn-primary" asp-action="Index">
                <i class="fa fa-arrow-left"></i>
                Back to products
            </button>

            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Update
            </button>
        </div>
    </div>
</form>